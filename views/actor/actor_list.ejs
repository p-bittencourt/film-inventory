<h1>List of Actors</h1>
<% if (actors.length) { %>
<ul>
  <% actors.forEach((actor, index) => { %>
  <li>
    <h2><a href="<%=actor.url%>"><%= actor.name %></a></h2>
    <% if (actor.age) { %>
    <p>Age: <%= actor.age %></p>
    <% } %> <% if (actor.nationality) { %>
    <p>Nationality: <%= actor.nationality %></p>
    <% } %> <% if (actor.picture) { %>
    <img
      src="<%= actor.picture %>"
      alt="<%= actor.name %>"
      class="resized-image"
    />
    <% } %>
    <ul>
      <% if (movies.length) {%> <% if (movies[index].length) { %>
      <h3>Seen in:</h3>
      <% movies[index].forEach(movie => { %>
      <li><%= movie.title %></li>
      <% }); %> <% } else { %>
      <p>No movies registered</p>
      <% } %> <% } %>
    </ul>
  </li>
  <% }); %>
</ul>
<% } else { %>
<p>There are no actors registered</p>
<% } %>


<div class="list-page">
  <h1>List of Movies</h1>
  <% if (movies.length) { %>
  <ul class="item-list">
    <% movies.forEach((movie, index) => { %>
    <li class="item-card">
      <h2><a href="<%=movie.url%>"><%= movie.title %></a></h2>
      <% if (movie.picture) { %>
      <a href="<%=movie.url%>"
        ><img
          src="<%= movie.picture %>"
          alt="<%= movie.title %>"
          class="resized-image"
      /></a>
      <% } if (movie.summary) { %>
      <p class="summary"><strong>Summary:</strong> <%= movie.summary %></p>
      <% } if (movie.release_year) { %>
      <p><strong>Release Year:</strong> <%= movie.release_year %></p>
      <% } if (directors.length) { if (directors[index].length) { %>
      <div class="director-container">
        <p style="display: inline"><strong>Director:</strong></p>
        <% directors[index].forEach(director => { %>
        <a href="<%= director.url %>">
          <p style="display: inline"><%= director.name %></p></a
        >
        <% }) %>
      </div>
      <% } } %>
      <ul>
        <% if (cast.length) {%> <% if (cast[index].length) { %>
        <h3>Featuring:</h3>
        <% cast[index].forEach(actor => { %>
        <li><a href="<%=actor.url%>"><%= actor.name %></a></li>
        <% }); %> <% } else { %>
        <h3>No cast registered</h3>
        <% } %> <% } %>
      </ul>
    </li>
    <% }); %> <% } else { %>
    <p>There are no movies registered</p>
    <% } %>
  </ul>
</div>

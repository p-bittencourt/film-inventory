<div class="create-page">
  <h1><%= movie ? 'Edit Movie' : 'Create Movie'%></h1>
  <form method="post">
    <div>
      <label for="title">Title:</label>
      <input
        type="text"
        id="title"
        name="title"
        required
        maxlength="100"
        value="<%= movie ? movie.title : '' %>"
      />
    </div>
    <div>
      <label for="summary">Summary:</label>
      <input
        type="text"
        id="summary"
        name="summary"
        required
        maxlength="250"
        value="<%= movie ? movie.summary : '' %>"
      />
    </div>
    <div>
      <label for="release_date">Release date:</label>
      <input
        type="date"
        id="release_date"
        name="release_date"
        value="<%= movie ? movie.release_date : '' %>"
      />
    </div>
    <div>
      <label for="picture">Poster URL:</label>
      <input
        type="url"
        id="picture"
        name="picture"
        value="<%= movie ? movie.picture : '' %>"
      />
    </div>
    <div>
      <label for="genre">Genre:</label>
      <select id="genre" name="genre" multiple>
        <% genres.forEach(function(genre) { %>
          <option value="<%= genre._id %>" <%= movie && movie.genre.includes(genre._id) ? 'selected' : '' %>><%= genre.name %></option>
        <% }); %>
      </select>
    </div>
    <div>
      <label for="director">Director:</label>
      <select id="director" name="director" multiple>
        <% directors.forEach(function(director) { %>
          <option value="<%= director._id %>" <%= movie && movie.director.includes(director._id) ? 'selected' : '' %>><%= director.name %></option>
        <% }); %>
      </select>
    </div>
    <div>
      <button type="submit"><%= movie ? 'Update' : 'Create' %></button>
    </div>
  </form>  
</div>

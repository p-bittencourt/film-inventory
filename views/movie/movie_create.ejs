<h1><%= movie ? 'Edit Movie' : 'Create Movie'%></h1>
<form method="post">
  <div>
    <label for="title">Title:</label>
    <input
      type="text"
      id="title"
      name="title"
      required
      maxlength="100"
      value="<%= movie ? movie.title : '' %>"
    />
  </div>
  <div>
    <label for="summary">Summary:</label>
    <input
      type="text"
      id="summary"
      name="summary"
      required
      maxlength="250"
      value="<%= movie ? movie.summary : '' %>"
    />
  </div>
  <div>
    <label for="release_date">Release date:</label>
    <input
      type="date"
      id="release_date"
      name="release_date"
      value="<%= movie ? movie.release_date : '' %>"
    />
  </div>
  <div>
    <label for="picture">Poster URL:</label>
    <input
      type="url"
      id="picture"
      name="picture"
      value="<%= movie ? movie.picture : '' %>"
    />
  </div>
  <div>
    <button type="submit"><%= movie ? 'Update' : 'Create' %></button>
  </div>
</form>
